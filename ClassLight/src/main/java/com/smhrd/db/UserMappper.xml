<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="해당model명">

	<!-- 쿼리문 작성 -->
	<!-- 받아올 데이터의 데이터 타입을 적을 때는 parameterType -->
	<!-- 결과 데이터의 데이터 타입을 적을 때는 resultType -->

	<!-- join구문 -->
	<insert id="join" parameterType="UserDTO">
		insert into user_tb
		values
		(#{userId},#{userPw},#{userName},sysdate,#{userBirthdate},0,#{userType})
	</insert>

	<!-- login구문 -->
	<select id="login" parameterType="UserDTO" resultType="UserDTO">
		select *
		from user_tb
		where user_id = #{user_id} and user_pw =#{user_pw}
	</select>

	<!-- 아이디 찾기 -->
	<select id="researchId" parameterType="UserDTO"
		resultType="UserDTO">
		select user_id
		from user_tb
		where user_name = #{user_name}
	</select>

	<!-- 비밀번호 찾기 -->
	<select id="researchPw" parameterType="UserDTO"
		resultType="UserDTO">
		select user_pw
		from user_tb
		where user_name = #{user_name} and user_id =#{user_id}
	</select>

	<!-- Question구문 -->
	<insert id="mQuestion" parameterType="QuestionDTO">
		insert into question_tb
		values(q_seq.nextval,#{title},#{content},#{time},#{score})
	</insert>

</mapper>